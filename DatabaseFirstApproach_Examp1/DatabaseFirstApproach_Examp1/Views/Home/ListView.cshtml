@model IEnumerable<tbl_Category>
@{
    ViewBag.Title = "ListView";
}

<h2>ListView</h2>

<table border="1" class="table table-bordered table-striped">

    <tr>
        <th>Category Id</th>
        <th>Category Name</th>
        <th>Category Description</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>@item.CategoryId</td>
    <td>@item.CategoryName</td>
    <td>@item.Description</td>
    <td>
        @Html.ActionLink("Edit", "Edit", "Home", new { id = item.CategoryId }, htmlAttributes: new { @class = "btn btn-primary" })
        @Html.ActionLink("Delete", "Delete", "Home", new { category_id = item.CategoryId }, htmlAttributes: new { @class = "btn btn-danger",onclick = "return Confirmation()" })
    </td> 
</tr>
 }


</table>

<script>

    function Confirmation() {

        return confirm("Are you sure you want to delete");
    }


</script>